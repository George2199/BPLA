{
  "name": "aerocosmos",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:win": "concurrently \"cd backend && cross-env FLASK_APP=app.py flask run\" \"vite\"",
    "dev:unix": "concurrently \"cd backend && ./venv/bin/python3 -m flask run\" \"vite\"",
    "dev": "npm run dev:unix",
    "electron:start": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:all": "concurrently \"cd backend && ./venv/bin/python3 -m flask run\" \"vite\" \"npm run electron:start\"",
    "build": "npm run clean && vite build && electron-builder",
    "build:win": "npm run clean && vite build && electron-builder --win --config.extraMetadata.debug=true --config.forceCodeSigning=false",
    "preview": "vite preview",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "marked": "^15.0.11",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.10",
    "electron-builder": "^23.6.0",
    "rimraf": "^6.0.1",
    "vite": "^6.1.0",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.aerocosmos.app",
    "productName": "AeroCosmos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**",
      "electron/**",
      "backend/**",
      "install.ps1",
      "!backend/venv/lib/**",
      "!**/*.exe"
    ],
    "extraResources": [
      {
        "from": "backend/venv",
        "to": "backend/venv"
      },
      {
        "from": "backend/app.py",
        "to": "backend/app.py"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "asar": false,
    "nsis": {
      "include": "installer.nsh",
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
